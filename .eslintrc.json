{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
      "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "camelcase": ["error", { "properties": "never", "ignoreDestructuring": true } ],
        "react/prop-types": [2, { "ignore": ["ignore"], "customValidators": ["customValidator"], "skipUndeclared": true }]
      }
}
